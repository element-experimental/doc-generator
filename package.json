{
  "name": "vue-ssr",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve src/entry-client.js",
    "build": "vue-cli-service build src/entry-client.js",
    "lint": "vue-cli-service lint",
    "ssr:build": "type=SSR vue-cli-service ssr:build",
    "ssr:start": "type=SSR cross-env NODE_ENV=production vue-cli-service ssr:serve --mode production",
    "test:unit": "vue-cli-service test:unit",
    "doc-build": "npm run ssr:build && node build.js && cp -r ssr-dist/zh-CN ./dist"
  },
  "dependencies": {
    "element-ui": "^2.4.5",
    "express": "^4.16.4",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.17",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@akryum/vue-cli-plugin-ssr": "^0.3.0",
    "@vue/cli-plugin-babel": "^3.0.4",
    "@vue/cli-plugin-eslint": "^3.0.4",
    "@vue/cli-plugin-unit-jest": "^3.2.0",
    "@vue/cli-service": "^3.0.4",
    "@vue/component-compiler-utils": "^2.3.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "algoliasearch": "^3.30.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "fs-extra": "^7.0.1",
    "loader-utils": "^1.1.0",
    "markdown-it": "^8.4.2",
    "markdown-it-anchor": "^5.0.2",
    "markdown-it-chain": "^1.3.0",
    "markdown-it-container": "^2.0.0",
    "node-sass": "^4.10.0",
    "perspective.js": "^1.0.0",
    "prismjs": "^1.15.0",
    "sass-loader": "^7.1.0",
    "transliteration": "^1.6.6",
    "vue-cli-plugin-element": "^1.0.0",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
